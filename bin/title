#!/bin/bash

while true; do
    window_id=$(xprop -root | awk '/_NET_ACTIVE_WINDOW\(WINDOW\)/{print $NF}')
    window_name=$(xprop -id "$window_id" | awk '/_NET_WM_NAME/{ $1=$2=""; print }' | cut -d\" -f2)
    window_name_short=${window_name:0:40}
    echo "$window_name_short" > /tmp/title
    sleep 0.1
done
