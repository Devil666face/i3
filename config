# resize window (you can also use the mouse for that)
mode "resize" {
    # Pressing left will shrink the window‚Äôs width.
    # Pressing right will grow the window‚Äôs width.
    # Pressing up will shrink the window‚Äôs height.
    # Pressing down will grow the window‚Äôs height.
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

mode "power" {
    # exit to xsession
    bindsym e exec --no-startup-id i3-msg exit; mode "default"
    # shutdown
    bindsym s exec --no-startup-id systemctl poweroff; mode "default"
    # sleep
    bindsym Shift+s exec --no-startup-id systemctl suspend; mode "default"
    # reboot
    bindsym r exec --no-startup-id systemctl reboot; mode "default"
	# lock screen
	# bindsym l exec --no-startup-id gnome-screensaver-command -la; mode "default"
	# perfomance power
	# bindsym f exec --no-startup-id /usr/bin/system76-power profile performance && \
    #     echo "‚ö°Ô∏è" > /tmp/profile && \
    #     dunstify "Power" "–ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω—ã–π –ø—Ä–æ—Ñ–∏–ª—å"; mode "default"
	bindsym f exec --no-startup-id /usr/bin/system76-power profile performance && \
        echo "Û∞ìÖ" > /tmp/profile && \
        dunstify "Power" "–ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω—ã–π –ø—Ä–æ—Ñ–∏–ª—å"; mode "default"
	# balanced power
	bindsym b exec --no-startup-id /usr/bin/system76-power profile balanced && \
        rm /tmp/profile && \
        dunstify "Power" "–°–±–∞–ª–∞–Ω—Å–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –ø—Ä–æ—Ñ–∏–ª—å"; mode "default"
	# economy power
	# bindsym l exec --no-startup-id /usr/bin/system76-power profile battery && \
    #     echo "üê¢" > /tmp/profile && \
    #     dunstify "Power" "–≠–∫–æ–Ω–æ–º–∏—á–Ω—ã–π –ø—Ä–æ—Ñ–∏–ª—å"; mode "default"
	bindsym l exec --no-startup-id /usr/bin/system76-power profile battery && \
        echo "Û∞æÜ" > /tmp/profile && \
        dunstify "Power" "–≠–∫–æ–Ω–æ–º–∏—á–Ω—ã–π –ø—Ä–æ—Ñ–∏–ª—å"; mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+p mode "default"
}
bindsym $mod+p mode "power"

mode "network" {
    # wg vpn
    bindsym c exec --no-startup-id wg-quick up $wgname && \
        echo $wgname > /tmp/vpn && \
        dunstify "VPN" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ $wgname —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ"; mode "default"
    bindsym d exec --no-startup-id wg-quick down $wgname && \
        rm /tmp/vpn && \
        dunstify "VPN" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —Å $wgname —Ä–∞–∑–æ—Ä–≤–∞–Ω–æ"; mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+n mode "default"
}
bindsym $mod+n mode "network"

