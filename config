# mod4 = Win
set $mod Mod4

# font
font pango:JetBrains Mono Nerd Font SemiBold 14

# set screen settings
exec_always --no-startup-id xrandr --auto
# exec_always --no-startup-id xrandr --output HDMI-0 --mode 1366x768 --pos 0x0 --rotate normal --output eDP-1-0 --primary --mode 1920x1080 --pos 1366x0 --rotate normal

# start i3
exec --no-startup-id dex --autostart --environment i3

# Applets: network; lock-screen; volume in bar; power and brightness; bluetooth
exec_always --no-startup-id killall nm-applet; nm-applet
exec_always --no-startup-id killall gnome-screensaver; gnome-screensaver
exec_always --no-startup-id killall volumeicon; volumeicon
exec_always --no-startup-id killall xfce4-power-manager; xfce4-power-manager
exec_always --no-startup-id killall blueman-applet; blueman-applet

# tap on touchpad
exec_always --no-startup-id xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1

# optional gnome-settings-daemons
exec_always --no-startup-id /usr/libexec/gsd-xsettings
exec_always --no-startup-id /usr/libexec/gsd-a11y-settings
exec_always --no-startup-id /usr/libexec/gsd-disk-utility-notify
exec_always --no-startup-id /usr/libexec/gsd-usb-protection
exec_always --no-startup-id /usr/libexec/gsd-wwan

# Optional check this daemons
# ps -eH  | grep system76
#     562 ?        00:00:00   system76-power
#     563 ?        00:00:00   system76-schedu
#    1432 ?        00:00:00     system76-schedu

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id alacritty --config-file ~/.config/i3/alacritty.yml

# kill focused window
bindsym $mod+q kill

# filebrowser
bindsym $mod+f exec --no-startup-id nautilus -w

# lock screen
bindsym $mod+l exec --no-startup-id gnome-screensaver-command -l

# settings
bindsym $mod+s exec --no-startup-id gnome-control-center

# browser
bindsym $mod+w exec --no-startup-id mercury-browser

# telegram
bindsym $mod+t exec --no-startup-id Updater

# obsidian
bindsym $mod+o exec --no-startup-id obsidian

# keepass
bindsym $mod+k exec --no-startup-id keepassxc

# screenshot
bindsym Print exec --no-startup-id flameshot gui

# dmenu for start apps
bindsym  $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -nb '#1d2021' -sf '#1d2021' -sb '#98971a' -nf '#d79921' -fn 'JetBrains Mono Nerd Font:size=14:style:Bold:antialias=true:autohint=true'"

# choose window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
# bindsym $mod+d focus child

# workspaces
set $ws1 "1:1 üí°"
set $ws2 "2:2 üåê"
