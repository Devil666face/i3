# rules for apps and ws
assign [class="(?i)firefox"] $ws2
assign [class="mercury-default"] $ws2
assign [class="Thorium-browser"] $ws2
assign [class="TelegramDesktop"] $ws3
assign [class="obsidian"] $ws4
